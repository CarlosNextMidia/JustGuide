<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <!-- Câmera principal (traseira) -->
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="80dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#000">
                    <androidx.camera.view.PreviewView
                        android:id="@+id/viewFinder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <!-- Câmera secundária (frontal) PiP - mini preview sobreposto -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSecondaryCamera"
                    android:layout_width="44dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone"
                    app:cardCornerRadius="6dp"
                    app:cardBackgroundColor="#000"
                    app:cardElevation="4dp">
                    <androidx.camera.view.PreviewView
                        android:id="@+id/viewFinderSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <!-- Borda indicadora -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                </androidx.cardview.widget.CardView>

                <!-- Indicador de rotação da câmera -->
                <TextView
                    android:id="@+id/tvCameraOrientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="2dp"
                    android:background="#66000000"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="V"
                    android:textColor="#00FFCC"
                    android:textSize="8sp"
                    android:fontFamily="monospace"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.8"
                    android:src="@drawable/logo_app" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textColor="#AAAAAA"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/tvDatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:text="--:--:--" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#00B0FF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="Localizando endereço..." />

                <TextView
                    android:id="@+id/tvTripTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:text="00:00:00 | 0.00 km" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        android:layout_marginTop="20dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRecoverTrip"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp"
            app:fabSize="mini" app:srcCompat="@android:drawable/ic_menu_search" app:backgroundTint="#FF9800" app:tint="#FFF"
            app:borderWidth="0dp" app:elevation="6dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSwitchCamera"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp"
            app:fabSize="mini" app:srcCompat="@android:drawable/ic_menu_camera" app:backgroundTint="#607D8B" app:tint="#FFF"
            app:borderWidth="0dp" app:elevation="6dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRotateImage"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:fabSize="mini" app:srcCompat="@android:drawable/ic_menu_rotate" app:backgroundTint="#607D8B" app:tint="#FFF"
            app:borderWidth="0dp" app:elevation="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cockpit_bar"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/bg_cockpit_bar"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCloseApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:fabSize="mini"
            app:backgroundTint="#33FFFFFF"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:elevation="0dp"
            app:borderWidth="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabStopRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="80dp"
            app:maxImageSize="38dp"
            app:srcCompat="@android:drawable/ic_media_play"
            app:backgroundTint="#00FFCC"
            app:tint="#000000"
            app:elevation="12dp"
            app:borderWidth="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChangeQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:fabSize="mini"
            app:backgroundTint="#33FFFFFF"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_menu_manage"
            app:elevation="0dp"
            app:borderWidth="0dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
