<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A10">

    <!-- ══════════════════════════════════════════
         BLOCO 1: VÍDEO COM HUD OVERLAY (estilo dashcam)
         ══════════════════════════════════════════ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Player de Vídeo -->
        <VideoView
            android:id="@+id/videoViewEvidence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <!-- HUD Overlay — dados sobrepostos no vídeo estilo dashcam -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Gradiente inferior para legibilidade dos textos -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent" />

            <!-- BARRA INFERIOR DO VÍDEO — Dados periciais -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="#AA000000"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="8dp"
                android:paddingBottom="10dp">

                <!-- Linha 1: Velocidade + Data/Hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Velocidade grande à esquerda -->
                    <TextView
                        android:id="@+id/tvEvidenceSpeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 KM/H"
                        android:textColor="#00FFCC"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:shadowColor="#00000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:fontFamily="monospace"
                        tools:text="47 KM/H" />

                    <!-- Data/Hora à direita -->
                    <TextView
                        android:id="@+id/tvEvidenceDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/-- --:--:--"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        tools:text="13/02/26 18:42:15" />

                </LinearLayout>

                <!-- Linha 2: Endereço -->
                <TextView
                    android:id="@+id/tvEvidenceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="LOCALIZANDO..."
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Av. Prestes Maia, 241 - Centro" />

            </LinearLayout>

            <!-- Indicador REC no canto superior esquerdo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#66000000"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Bolinha vermelha REC -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#FF0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="PROVA PERICIAL"
                    android:textColor="#FF4444"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1" />

            </LinearLayout>

            <!-- Label GPS no canto superior direito -->
            <TextView
                android:id="@+id/tvEvidenceCoords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:background="#66000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="GPS ●"
                android:textColor="#00FFCC"
                android:textSize="10sp"
                android:fontFamily="monospace"
                tools:text="-23.5432 -46.6342" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- ══════════════════════════════════════════
         BLOCO 2: BARRA DE TELEMETRIA (entre vídeo e mapa)
         ══════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/telemetryBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#0D1520"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ícone escudo -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_shield_check"
            android:contentDescription="Prova blindada"
            app:tint="#00FFCC" />

        <TextView
            android:id="@+id/tvEvidenceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="REPRODUÇÃO DE PROVA PERICIAL"
            android:textColor="#00FFCC"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/tvEvidenceLogCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 registros"
            android:textColor="#557799"
            android:textSize="10sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- ══════════════════════════════════════════
         BLOCO 3: MAPA (abaixo da barra de telemetria, preenche o resto)
         ══════════════════════════════════════════ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/telemetryBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <fragment
            android:id="@+id/mapEvidence"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
